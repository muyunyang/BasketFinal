<?xml version="1.0" encoding="utf-8"?>



    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.finalfinalcaloriego.TabbedActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/recipe1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:onClick="onClick"
                android:src="@drawable/newspic01" />


            <TextView
                android:id="@+id/news1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="serif-monospace"
                android:gravity="center_horizontal"
                android:text="A new way of cooking salmon"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/food02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="serif-monospace"
                android:gravity="center_horizontal"
                android:text="How to choose your fruit"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/food03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="serif-monospace"
                android:gravity="center_horizontal"
                android:text="How to choose your fruit"
                android:textSize="18sp" />


        </LinearLayout>


    </ScrollView>


