<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/lunchPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/beef" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lunchName"
            android:text="Beef（200g)"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/lunchPic"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/measurement"
            android:layout_toRightOf="@+id/lunchPic"
            android:layout_below="@+id/lunchName"
            android:text="Calorie(Kcal)： "
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lunchCalorie"
            android:layout_toRightOf="@+id/measurement"
            android:layout_below="@+id/lunchName"
            android:text="212 "
            android:textSize="18sp"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>